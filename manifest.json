{
  "manifest_version": 2,

  "name": "Overcast Enhancer",
  "description": "Adds some small improvements to the Overcast webapp.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["https://overcast.fm/podcasts/episode/*"],
      "css": ["style.css"],
      "js": [
        "jquery.js",
        "playpage.js"
      ]
    }
  ],

  "web_accessible_resources": [
    "style.css"
  ],


  "permissions": [
    "https://overcast.fm/"
  ]
}